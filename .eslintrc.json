{
    "env": {
        "browser": false,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "overrides": [
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "indent": ["warning", 2, { "SwitchCase": 1, "flatTernaryExpressions": true }],
        "multiline-ternary": ["warning", "always-multiline"],
        "linebreak-style": [
            "warning",
            "unix"
        ],
        "quotes": [
            "warning",
            "single"
        ],
        "semi": [
            "warning",
            "always"
        ],
        "prettier/prettier": 2 // Means error
    }
}